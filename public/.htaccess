# Force HTTPS
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Jika belum menggunakan HTTPS, arahkan ke HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Disable directory browsing
Options -Indexes

# ----------------------------------------------------------------------
# Rewrite engine
# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    Options +FollowSymlinks
    RewriteEngine On
    RewriteBase /DataInvest/

    # Pengecualian untuk file statis seperti gambar, CSS, dan JS
    RewriteCond %{REQUEST_URI} !^/Laporin/(assets|uploads|img|css|js)/

    # Menghapus trailing slash pada URL
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Jika file atau direktori tidak ditemukan, arahkan ke index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([\s\S]*)$ index.php/$1 [L,NC,QSA]

    # Menjaga Authorization Header jika ada
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

# Jika mod_rewrite tidak tersedia, arahkan semua 404 ke index.php
<IfModule !mod_rewrite.c>
    ErrorDocument 404 index.php
</IfModule>

# Menonaktifkan server signature untuk alasan keamanan
ServerSignature Off

# Pengecualian untuk menangani file atau URL tertentu agar tidak diubah
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} !^/DataInvest/(assets|uploads|img|css|js|favicon.ico)
</IfModule>

# ------------------------------------------------------
# Mengarahkan ke login jika tidak terautentikasi
# ------------------------------------------------------

<IfModule mod_rewrite.c>
    # Misalnya Anda ingin setiap akses ke `/DataInvest/` langsung ke login
    RewriteCond %{REQUEST_URI} ^/DataInvest/?$
    RewriteRule ^ /auth/login [L,R=301]
</IfModule>
